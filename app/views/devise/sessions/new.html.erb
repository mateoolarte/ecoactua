<section class="form__auth">
  <h2 class="text-center">Ingresar</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electrónico" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="text-center">
      <%= f.submit "Ingresar", class: "btn btn-primary btn-large" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
