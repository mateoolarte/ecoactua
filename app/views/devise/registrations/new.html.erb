<section class="form__auth margin-bottom-50">
  <h2 class="text-center">Registro</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :role, :value => "user" %>

    <div class="field">
      <%= f.text_field :firstname, autofocus: true, placeholder: "Nombre" %>
    </div>

    <div class="field">
      <%= f.text_field :lastname, placeholder: "Apellido" %>
    </div>

    <div class="field">
      <%= f.text_field :username, placeholder: "Nombre de usuario" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: "Correo electrónico" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
      <% if @minimum_password_length %>
        <span>(Mínimo <%= @minimum_password_length %> caracteres)</span>
      <% end %><br />
    </div>

    <div class="text-center">
      <%= f.submit "Registrarse", class: "btn btn-primary btn-large" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
