<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :role, :value => "user" %>

  <div class="field">
    <%= f.text_field :firstname, autofocus: true, placeholder: "Nombre" %>
  </div>

  <div class="field">
    <%= f.text_field :lastname, placeholder: "Apellido" %>
  </div>

  <div class="field">
    <%= f.text_field :username, placeholder: "Nombre de usuario" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Correo electrónico" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
    <% if @minimum_password_length %>
      (Mínimo <%= @minimum_password_length %> caracteres)
    <% end %><br />
  </div>

  <div class="actions">
    <%= f.submit "Aceptar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
