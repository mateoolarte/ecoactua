<h1 class="heading text-center">Crear reporte</h1>

<%= form_for @report do |f| %>
  <%= f.text_field :address, placeholder: "Dirección del reporte" %>
  <%= f.text_area :description, placeholder: "Descripción del reporte" %>:
  <label>Tipo de reporte</label>

  <label>Ubicación en el mapa</label>

  <%= f.submit "Crea tu reporte", class: "btn btn-primary btn-large" %>
<% end %>